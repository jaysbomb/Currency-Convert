<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.reportMainActivity">
    <TextView
        android:text="@string/line1"
        android:textSize="30sp"
        android:textColor="#f88166"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_from"
        android:layout_margin="10sp" />

    <TextView
        android:text="@string/line2"
        android:textSize="30sp"
        android:textColor="#f88166"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_to"
        android:layout_below="@+id/textView_from"
        android:layout_alignStart="@+id/textView_from" />

    <TextView
        android:text="@string/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView_date"
        android:layout_marginLeft="0dp"
        android:textColor="#f88166"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView_to"
        android:layout_alignStart="@+id/textView_to" />
</RelativeLayout>
